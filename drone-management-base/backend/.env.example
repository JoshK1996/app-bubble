# Node environment
NODE_ENV=development

# Server configuration
PORT=5000
API_PREFIX=/api/v1

# Database configuration
DATABASE_TYPE=postgres  # "postgres" or "mongo"
DATABASE_URL=postgresql://postgres:password@localhost:5432/drone_management
MONGODB_URI=mongodb://localhost:27017/drone_management

# JWT configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Weather API (for mission planning)
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://api.weatherapi.com/v1

# File Storage (for document management)
STORAGE_TYPE=local # "local", "s3", "azure"
S3_BUCKET_NAME=your-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key

# Email notifications (for alerts and reminders)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@example.com

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880  # 5MB in bytes

# Third-party Services (if needed)
# STRIPE_API_KEY=your_stripe_api_key
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=your_mailgun_domain

# Drone Specific Configuration
DRONE_IDLE_TIMEOUT=300  # seconds
DRONE_OPERATION_TIMEOUT=1800  # seconds
MAX_DRONE_ALTITUDE=120  # meters
DEFAULT_GEOFENCE_RADIUS=1000  # meters 