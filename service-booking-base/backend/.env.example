# Node environment: development, test, production
NODE_ENV=development

# Server configuration
PORT=5000
API_PREFIX=/api/v1

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Database Configuration
# Choose between 'postgres' or 'mongo'
DATABASE_TYPE=postgres

# PostgreSQL Connection (used when DATABASE_TYPE=postgres)
DATABASE_URL=postgresql://username:password@localhost:5432/service_booking?schema=public

# MongoDB Connection (used when DATABASE_TYPE=mongo)
MONGODB_URI=mongodb://localhost:27017/service_booking

# CORS Configuration
# Comma-separated list of allowed origins (default: all)
CORS_ORIGIN=http://localhost:3000

# Logging Level: error, warn, info, http, debug
LOG_LEVEL=info

# Test Database Configuration
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/service_booking_test?schema=public
TEST_MONGODB_URI=mongodb://localhost:27017/service_booking_test 